{
	"site": "kevin.sandbox.imarc.net",

	"sources": {
		"head": {
			"type": "source/svn",
			"url": "https://svn.imarc.net/kevin.sandbox.imarc.net/trunk",
			"rev": "HEAD",
			"dirs": [ "app", "docroot" ]
		},
		"staged": {
			"type": "source/svn",
			"args": "https://svn.imarc.net/kevin.sandbox.imarc.net/trunk",
			"rev": "@stage",
			"dirs": [ "app", "docroot" ]
		},
		"content": {
			"type": "source/local",
			"path": "./prod",
			"dirs": [ "writable" ]
		}
	},

	"servers": {
		"localhost": "kevin@localhost"
	},

	"environments": {
		"dev": {
			"servers": [ "localhost" ],
			"sources": [ "head", "content" ]
		},
		"stage": {
			"servers": [ "localhost" ],
			"sources": [ "head", "content" ]
		},
		"prod": {
			"servers": [ "localhost" ],
			"sources": [ "staged" ]
		}
	}
}
